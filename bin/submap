#!/bin/env python

import liteMap
import sys

#XXX Needs better command line with output flag etc

try:
    m=liteMap.liteMapFromFits(sys.argv[1])
    ra0 = float(sys.argv[2])
    ra1 = float(sys.argv[3])
    dec0 = float(sys.argv[4])
    dec1 = float(sys.argv[5])
except:
    print "Usage: submap mapFile ra0 ra1 dec0 dec1"
    raise

sm = m.selectSubMap(ra0, ra1, dec0, dec1)

sm.writeFits("submap.fits")
